generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email String  @id
  pass_hash  String?
}

model Apikey {
  apikey String  @id
  email String
  name  String?
  note  String?
  created_at  DateTime @default(now())
}

model Point {
  email String  @id
  point Int @default(0)
}

model Registration {
  email String  @id
  pass_hash  String
  activation_code  String
  submitted_at  DateTime @default(now())
}

model ResetPassord {
  email String  @id
  activation_code  String
  submitted_at  DateTime @default(now())
}

// ------------------------
// for payment processing

model Payment {
  tx_hash String  @id
  tx_value  String
  // how much uSDC for a million points. Price could be changed so this record the price at the processing time.
  price Int @default(0)
  amount Int @default(0)
  status Int @default(0)
  processed_at  DateTime @default(now())
  result  String
}
